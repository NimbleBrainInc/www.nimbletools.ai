<style>
  /* Hero Section */
  .hero {
    text-align: center;
  }

  .hero-cta {
    margin-top: 32px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .cta-note {
    font-size: 14px;
    color: var(--text-secondary);
    font-weight: 500;
  }

  /* Challenge Section */

  .challenge-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
    margin-top: 64px;
  }

  .challenge-item {
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 32px;
    text-align: center;
  }

  .challenge-icon {
    font-size: 48px;
    margin-bottom: 16px;
  }

  .challenge-item h3 {
    font-size: 20px;
    margin-bottom: 16px;
    color: #ff6b6b;
  }

  .challenge-item p {
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .solution-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
    margin-top: 64px;
  }

  .solution-item {
    background: rgba(0, 255, 136, 0.05);
    border: 1px solid var(--accent);
    border-radius: 16px;
    padding: 32px;
    text-align: center;
  }

  .solution-icon {
    font-size: 48px;
    margin-bottom: 16px;
  }

  .solution-item h3 {
    font-size: 20px;
    margin-bottom: 16px;
    color: var(--accent);
  }

  .solution-item p {
    color: var(--text-secondary);
    line-height: 1.6;
  }

  /* Terminal Demo */

  .terminal-container {
    background: var(--bg-terminal);
    border: 1px solid var(--border);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  }

  .terminal-header {
    background: var(--bg-secondary);
    padding: 12px 16px;
    display: flex;
    align-items: center;
    gap: 8px;
    border-bottom: 1px solid var(--border);
  }

  .terminal-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--border);
  }

  .terminal-dot.red {
    background: #ff5f57;
  }
  .terminal-dot.yellow {
    background: #ffbd2e;
  }
  .terminal-dot.green {
    background: #28ca42;
  }

  .terminal-title {
    color: var(--text-secondary);
    font-size: 13px;
    margin-left: auto;
    font-family: "SF Mono", Consolas, monospace;
  }

  .terminal-body {
    padding: 24px;
    font-family: "SF Mono", Consolas, monospace;
    font-size: 14px;
    line-height: 1.6;
    height: 500px;
    overflow-y: auto;
  }

  .terminal-line {
    margin-bottom: 16px;
    display: flex;
    align-items: flex-start;
    opacity: 0;
    animation: fadeIn 0.5s forwards;
  }

  .terminal-line.command {
    color: var(--text-primary);
  }

  .terminal-line.output {
    color: var(--text-secondary);
    padding-left: 0;
  }

  .terminal-line.success {
    color: var(--accent);
  }

  .terminal-line.comment {
    color: #6b7280;
    font-style: italic;
  }

  .prompt {
    color: var(--accent);
    margin-right: 8px;
    user-select: none;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  /* Workflow Section */

  .workflow-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
    margin-top: 64px;
  }

  .workflow-step {
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 32px;
    position: relative;
  }

  .workflow-number {
    position: absolute;
    top: -16px;
    left: 32px;
    background: var(--accent);
    color: var(--bg-primary);
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 14px;
  }

  .workflow-step h3 {
    font-size: 20px;
    margin-bottom: 16px;
    margin-top: 8px;
  }

  .workflow-step p {
    color: var(--text-secondary);
    margin-bottom: 24px;
    line-height: 1.6;
  }

  .workflow-code {
    background: var(--code-bg);
