<script is:inline>
    // Terminal animation showing the journey
    const terminalLines = [
        { type: 'comment', text: '# Welcome to NimbleTools - let\'s deploy your first MCP server', delay: 0 },
        { type: 'command', text: 'ntcli auth signup', delay: 500 },
        { type: 'output', text: 'Enter email: developer@example.com', delay: 1000 },
        { type: 'output', text: 'Enter password: ********', delay: 1300 },
        { type: 'success', text: '‚úì Account created successfully!', delay: 1700 },
        { type: 'output', text: '', delay: 1900 },
        
        { type: 'comment', text: '# Create a workspace for your project', delay: 2100 },
        { type: 'command', text: 'ntcli workspace create my-ai-assistant', delay: 2600 },
        { type: 'success', text: '‚úì Workspace \'my-ai-assistant\' created', delay: 3100 },
        { type: 'success', text: '‚úì Switched to workspace \'my-ai-assistant\'', delay: 3300 },
        { type: 'output', text: '', delay: 3500 },
        
        { type: 'comment', text: '# Deploy your first MCP server', delay: 3700 },
        { type: 'command', text: 'ntcli server deploy github-mcp', delay: 4200 },
        { type: 'output', text: 'Pulling server image...', delay: 4700 },
        { type: 'output', text: 'Creating isolated environment...', delay: 5200 },
        { type: 'output', text: 'Configuring endpoints...', delay: 5700 },
        { type: 'success', text: '‚úì Server deployed successfully', delay: 6200 },
        { type: 'output', text: 'Server ID: srv_xyz789', delay: 6400 },
        { type: 'output', text: 'Status: Running', delay: 6500 },
        { type: 'output', text: 'Endpoint: https://my-ai-assistant.nimbletools.com/servers/srv_xyz789', delay: 6600 },
        { type: 'output', text: '', delay: 6800 },
        
        { type: 'comment', text: '# Need more power? Scale up instantly', delay: 7300 },
        { type: 'command', text: 'ntcli server scale srv_xyz789 4', delay: 7800 },
        { type: 'output', text: 'Scaling server to 4 instances...', delay: 8300 },
        { type: 'success', text: '‚úì Server scaled successfully', delay: 9000 },
        { type: 'output', text: 'Instances: 4/4 running', delay: 9200 },
        { type: 'output', text: 'Load balancer: Active', delay: 9300 },
        { type: 'output', text: '', delay: 9500 },
        
        { type: 'comment', text: '# Your MCP server is ready! üöÄ', delay: 10000 },
    ];

    function animateTerminal() {
        const terminal = document.getElementById('terminal');
        if (!terminal) return;
        
        terminal.innerHTML = '';
        
        terminalLines.forEach((line, index) => {
            setTimeout(() => {
                const lineElement = document.createElement('div');
                lineElement.className = `terminal-line ${line.type}`;
                lineElement.style.animationDelay = '0s';
                
                if (line.type === 'command') {
                    lineElement.innerHTML = `<span class="prompt">$</span> ${line.text}`;
                } else {
                    lineElement.textContent = line.text;
                }
                
                terminal.appendChild(lineElement);
                terminal.scrollTop = terminal.scrollHeight;
            }, line.delay);
        });
    }

    // Start animation when terminal is in view
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                animateTerminal();
                observer.unobserve(entry.target);
            }
        });
    }, { threshold: 0.5 });

    const terminalContainer = document.querySelector('.terminal-container');
    if (terminalContainer) {
        observer.observe(terminalContainer);
    }
</script>
