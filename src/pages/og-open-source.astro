---
import nimbleToolsLogo from "../assets/images/nimbletools-logo-n-transparent.png";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NimbleTools Open Source Announcement</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            width: 100vw;
            height: 100vh;
            min-width: 1920px;
            min-height: 1080px;
            background: radial-gradient(ellipse at center, #0f0f0f 0%, #000000 70%, #000000 100%);
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            color: white;
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        /* Mysterious grid background */
        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                linear-gradient(rgba(0, 255, 136, 0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0, 255, 136, 0.03) 1px, transparent 1px);
            background-size: 60px 60px;
            opacity: 0.7;
            animation: pulse 4s ease-in-out infinite;
        }

        /* Glowing orb effect */
        body::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(0, 255, 136, 0.1) 0%, transparent 70%);
            border-radius: 50%;
            animation: glow 6s ease-in-out infinite alternate;
        }

        @keyframes pulse {
            0%, 100% { opacity: 0.3; }
            50% { opacity: 0.7; }
        }

        @keyframes glow {
            0% { opacity: 0.1; transform: translate(-50%, -50%) scale(1); }
            100% { opacity: 0.3; transform: translate(-50%, -50%) scale(1.2); }
        }

        .container {
            position: relative;
            z-index: 1;
            padding: 80px;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            min-height: 100vh;
        }

        .header {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 0;
        }

        .logo {
            width: 80px;
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .logo img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            background: transparent !important;
            border: none;
            outline: none;
        }

        .brand {
            font-size: 48px;
            font-weight: 600;
            color: white;
        }

        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 40px;
            text-align: center;
        }

        .announcement-badge {
            display: inline-flex;
            align-items: center;
            gap: 16px;
            background: rgba(0, 255, 136, 0.08);
            border: 1px solid rgba(0, 255, 136, 0.2);
            padding: 20px 40px;
            border-radius: 100px;
            font-size: 28px;
            font-weight: 500;
            width: fit-content;
            color: rgba(0, 255, 136, 0.9);
            animation: flicker 3s ease-in-out infinite;
        }

        .eye {
            font-size: 32px;
            animation: blink 4s ease-in-out infinite;
        }

        @keyframes flicker {
            0%, 100% { opacity: 0.7; }
            50% { opacity: 1; }
        }

        @keyframes blink {
            0%, 90%, 100% { opacity: 1; }
            95% { opacity: 0.3; }
        }

        .title {
            font-size: 144px;
            font-weight: 300;
            line-height: 1.1;
            margin: 0;
            color: rgba(255, 255, 255, 0.95);
            letter-spacing: -4px;
            text-shadow: 0 0 50px rgba(0, 255, 136, 0.3);
            animation: breathe 5s ease-in-out infinite;
        }

        @keyframes breathe {
            0%, 100% { opacity: 0.9; }
            50% { opacity: 1; }
        }

        .subtitle {
            font-size: 32px;
            color: rgba(255, 255, 255, 0.6);
            font-weight: 300;
            line-height: 1.4;
            max-width: 1000px;
            font-style: italic;
            margin: 0;
        }

        .cryptic-hints {
            display: flex;
            gap: 120px;
            margin-top: 0;
            opacity: 0.7;
            justify-content: center;
        }

        .hint {
            display: flex;
            align-items: center;
            gap: 20px;
            font-size: 24px;
            color: rgba(255, 255, 255, 0.5);
            font-family: 'Courier New', monospace;
        }

        .hint-icon {
            width: 32px;
            height: 32px;
            background: rgba(0, 255, 136, 0.2);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            animation: flicker 2s ease-in-out infinite;
        }

        .hint:nth-child(2) .hint-icon { animation-delay: 0.5s; }
        .hint:nth-child(3) .hint-icon { animation-delay: 1s; }

        .bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .github-link {
            display: flex;
            align-items: center;
            gap: 20px;
            font-size: 28px;
            color: #00ff88;
            text-decoration: none;
            font-weight: 500;
        }

        .github-icon {
            width: 40px;
            height: 40px;
            fill: currentColor;
        }

        .watch-button {
            background: rgba(0, 255, 136, 0.1);
            border: 1px solid rgba(0, 255, 136, 0.3);
            color: rgba(0, 255, 136, 0.9);
            padding: 24px 48px;
            border-radius: 12px;
            font-size: 24px;
            font-weight: 400;
            box-shadow: 0 0 30px rgba(0, 255, 136, 0.1);
            animation: pulse-button 3s ease-in-out infinite;
        }

        @keyframes pulse-button {
            0%, 100% { box-shadow: 0 0 20px rgba(0, 255, 136, 0.1); }
            50% { box-shadow: 0 0 30px rgba(0, 255, 136, 0.2); }
        }

        /* Glow effects */
        .title {
            filter: drop-shadow(0 0 20px rgba(0, 255, 136, 0.3));
        }

        .logo img {
            filter: drop-shadow(0 0 20px rgba(0, 255, 136, 0.4));
        }
    </style>
</head>
