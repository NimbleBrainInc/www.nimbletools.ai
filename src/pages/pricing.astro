---
import BaseLayout from "../layouts/BaseLayout.astro";
import { externalLinks } from "../config/externalLinks.js";
---

<BaseLayout
  title="Pricing - NimbleTools"
  description="Choose between our Open Source Community Edition for individual developers and our Enterprise Edition for teams that need governance, compliance, and scale."
  keywords="MCP pricing, Model Context Protocol pricing, enterprise MCP, open source MCP, MCP server pricing"
  currentPage="pricing"
>
  <section class="hero section-bg-tertiary">
    <div class="container">
      <h1>Simple, Scalable Pricing</h1>
      <p class="subtitle">
        Start free with Community, scale with Starter, grow to Team, or go
        Enterprise. Choose the plan that fits your scale.
      </p>
    </div>
  </section>

  <section class="pricing-section section-bg-secondary">
    <div class="container">
      <div class="pricing-grid">
        <!-- Community -->
        <div class="pricing-card">
          <h3 class="plan-title">Community</h3>
          <div class="plan-pricing">
            <span class="price">Free</span>
          </div>
          <a href={externalLinks.appLink} class="primary-cta cta-button">
            <span>Start Free</span>
          </a>
          <div class="plan-limits">
            <div class="limit-item">
              <span>1 Workspace</span>
            </div>
            <div class="limit-item">
              <span>Up to 5 MCP servers</span>
            </div>
            <div class="limit-item">
              <span>50K MCP calls/month</span>
            </div>
            <div class="limit-item">
              <span>Community support only</span>
            </div>
          </div>
        </div>

        <!-- Starter -->
        <div class="pricing-card">
          <h3 class="plan-title">Starter</h3>
          <div class="plan-pricing">
            <span class="price">$49</span>
            <span class="period">/month</span>
          </div>
          <a href={externalLinks.starterPayment} class="primary-cta cta-button">
            <span>Buy Now</span>
          </a>
          <div class="plan-limits">
            <div class="limit-item">
              <span>5 workspaces</span>
            </div>
            <div class="limit-item">
              <span>Up to 10 MCP servers</span>
            </div>
            <div class="limit-item">
              <span>250K MCP calls/month</span>
            </div>
            <div class="limit-item">
              <span>Overage: $25 per 100K</span>
            </div>
            <div class="limit-item">
              <span>Email support</span>
            </div>
          </div>
        </div>

        <!-- Team -->
        <div class="pricing-card featured">
          <div class="best-value-badge">BEST VALUE</div>
          <h3 class="plan-title">Team</h3>
          <div class="plan-pricing">
            <span class="price">$199</span>
            <span class="period">/month</span>
          </div>
          <a href={externalLinks.teamPayment} class="primary-cta cta-button">
            <span>Buy Now</span>
          </a>
          <div class="plan-limits">
            <div class="limit-item">
              <span>20 workspaces</span>
            </div>
            <div class="limit-item">
              <span>Up to 50 MCP servers</span>
            </div>
            <div class="limit-item">
              <span>1M MCP calls/month</span>
            </div>
            <div class="limit-item">
              <span>Overage: $20 per 100K</span>
            </div>
            <div class="limit-item">
              <span>Email + limited priority support</span>
            </div>
          </div>
        </div>

        <!-- Enterprise -->
        <div class="pricing-card">
          <h3 class="plan-title">Enterprise</h3>
          <div class="plan-pricing">
            <span class="price">Custom</span>
          </div>
          <a href={externalLinks.schedulingLink} class="outline-cta cta-button">
            <span>Contact Sales</span>
          </a>
          <div class="plan-limits">
            <div class="limit-item">
              <span>Unlimited workspaces, servers, MCP calls</span>
            </div>
            <div class="limit-item">
              <span>On-prem & BYOC deployment options</span>
            </div>
            <div class="limit-item">
              <span>Dedicated account manager, 24/7 support</span>
            </div>
            <div class="limit-item">
              <span>SLAs and compliance (SOC2, HIPAA, GDPR)</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Open Source Row -->
      <div class="open-source-section">
        <div class="open-source-card">
          <div class="open-source-content">
            <div class="open-source-left">
              <div class="open-source-header">
                <h3>Open Source</h3>
                <span class="open-source-badge">Free Forever</span>
              </div>
              <p>
                Self-host our open source MCP servers on your own infrastructure
                with complete control and customization.
              </p>
            </div>
            <div class="open-source-right">
              <button class="coming-soon-cta cta-button" disabled>
                <span>Coming Soon</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Usage Calculator -->
  <section class="calculator-section section-bg-tertiary" id="calculator">
    <div class="container">
      <h2 class="section-title">Find Your Perfect Plan</h2>
      <p class="section-subtitle">
        Adjust the sliders to see which plan fits your usage and what it costs
      </p>

      <div class="calculator-card">
        <div class="calculator-inputs">
          <div class="input-group">
            <label for="workspaces">Workspaces</label>
            <div class="slider-container">
              <input
                type="range"
                id="workspaces"
                min="1"
                max="21"
                value="1"
                class="slider"
              />
              <span class="slider-value" id="workspaces-value">1</span>
            </div>
          </div>

          <div class="input-group">
            <label for="servers">Servers</label>
            <div class="slider-container">
              <input
                type="range"
                id="servers"
                min="1"
                max="51"
                value="1"
                class="slider"
              />
              <span class="slider-value" id="servers-value">3</span>
            </div>
          </div>

          <div class="input-group">
            <label for="invocations">Monthly MCP Calls</label>
            <div class="slider-container">
              <input
                type="range"
                id="invocations"
                min="1000"
                max="1100000"
                value="1000"
                step="10000"
                class="slider"
              />
              <span class="slider-value" id="invocations-value">1K</span>
            </div>
          </div>

          <div class="input-group">
            <div class="checkbox-container">
              <input type="checkbox" id="byoc" class="checkbox" />
              <label for="byoc" class="checkbox-label"
                >BYOC/On-premise deployment required</label
              >
            </div>
          </div>
        </div>

        <div class="calculator-result">
          <div class="recommended-plan">
            <div class="plan-name" id="plan-name">Community</div>
            <div class="plan-price" id="plan-price">Free</div>
            <div class="plan-details" id="plan-details">
              Perfect for getting started
            </div>
            <div
              class="calculator-cta"
              id="calculator-cta"
              style="display: none;"
            >
              <a href={externalLinks.schedulingLink} class="calculator-btn">
                <span>Schedule Demo</span>
              </a>
            </div>
          </div>
        </div>

        <div class="vertical-separator"></div>

        <div class="nomenclature-compact">
          <div class="nomenclature-item-compact">
            <div class="nomenclature-icon-compact workspaces-icon">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <rect x="3" y="3" width="7" height="7" rx="1"></rect>
                <rect x="14" y="3" width="7" height="7" rx="1"></rect>
                <rect x="3" y="14" width="7" height="7" rx="1"></rect>
                <rect x="14" y="14" width="7" height="7" rx="1"></rect>
              </svg>
            </div>
            <div class="nomenclature-text">
              <h4>Workspaces</h4>
              <p>Isolated environments for teams and projects</p>
            </div>
          </div>

          <div class="nomenclature-item-compact">
            <div class="nomenclature-icon-compact servers-icon">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <rect x="2" y="3" width="20" height="4" rx="1"></rect>
                <rect x="2" y="9" width="20" height="4" rx="1"></rect>
                <rect x="2" y="15" width="20" height="4" rx="1"></rect>
                <circle cx="6" cy="5" r="1"></circle>
                <circle cx="6" cy="11" r="1"></circle>
