---
import nimbleToolsLogo from "../assets/images/nimbletools-logo-n-transparent.png";
import { externalLinks } from "../config/externalLinks.js";

export interface Props {
  title: string;
  description: string;
  keywords?: string;
  currentPage?: string;
}

const { title, description, keywords, currentPage } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- SEO Meta Tags -->
    <meta name="description" content={description} />
    {keywords && <meta name="keywords" content={keywords} />}
    <meta name="author" content="NimbleBrain, Inc." />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content="https://www.nimbletools.ai/assets/icons/og-image.png"
    />
    <meta property="og:site_name" content="NimbleTools" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content="https://www.nimbletools.ai/assets/icons/og-image.png"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/assets/icons/favicon.ico" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/assets/icons/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/assets/icons/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/assets/icons/favicon-16x16.png"
    />

    <!-- Theme Color -->
    <meta name="theme-color" content="#00ff88" />
    <meta name="msapplication-TileColor" content="#0a0a0a" />

    <!-- Google Tag Manager -->
    <script is:inline>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-WRKB2426");
    </script>
    <!-- End Google Tag Manager -->
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-WRKB2426"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <div class="grid-bg"></div>

    <header>
      <nav class="container">
        <a href="/" class="logo">
          <img
            src={nimbleToolsLogo.src}
            alt="NimbleTools Logo"
            width="32"
            height="32"
          />
          <span>NimbleTools</span>
        </a>
        <div class="nav-links">
          <a href="/" class={currentPage === "home" ? "active" : ""}>Home</a>
          <a
            href="/custom-mcp-servers"
            class={currentPage === "custom-mcp-servers" ? "active" : ""}
            >Custom MCP Servers</a
          >
          <a href={externalLinks.docs}>Docs</a>
        </div>
        <div class="nav-cta">
          <a href="/#get-started" class="sign-in-btn">Install CLI</a>
          {
            /* <a href="https://calendly.com/mat-nimblebrain/nimbletools-demo-30min" class="sales-btn">Talk to Sales</a> */
          }
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <div class="container">
        <div class="footer-content">
          <div class="footer-brand">
            <h3>nimbletools</h3>
            <p>
              Deploy and scale MCP servers instantly across any cloud
              infrastructure.
            </p>
          </div>

          <div class="footer-column">
            <h4>Getting Started</h4>
            <ul>
              <li><a href="/#get-started">Start Free</a></li>
              <li><a href={externalLinks.docs}>Documentation</a></li>
              <li><a href={externalLinks.community}>Community</a></li>
            </ul>
          </div>

          <div class="footer-column">
            <h4>Building & Scaling</h4>
            <ul>
              <li><a href="/custom-mcp-servers">Custom MCP Servers</a></li>
              <li><a href={externalLinks.schedulingLink}>Book a Demo</a></li>
              <li><a href={externalLinks.githubOrg}>GitHub</a></li>
            </ul>
          </div>

          <div class="footer-column">
            <h4>Enterprise & Support</h4>
            <ul>
              <li>
                <a href="https://www.nimblebrain.ai">About NimbleBrain</a>
              </li>
              <li><a href="https://nimblebrain.substack.com">Blog</a></li>
              <li><a href="https://status.nimblebrain.ai">Status</a></li>
            </ul>
          </div>
        </div>

        <div class="footer-bottom">
          <p>
            Â© 2025 <a style="color: white" href="https://www.nimblebrain.ai"
              >NimbleBrain, Inc.</a
            > All rights reserved.
          </p>
          <div class="social-links">
            <a
              href={externalLinks.githubNtcli}
              class="social-link"
              title="GitHub"
            >
              <svg
                width="20"
                height="20"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
