---
// InstallCLI component - Reusable CLI installation button with copy-to-clipboard
export interface Props {
  class?: string;
  variant?: "primary" | "secondary";
}

const { class: className = "", variant = "primary" } = Astro.props;
---

<button
  class={`install-cta ${variant === "primary" ? "primary-cta" : "secondary-cta"} ${className}`}
  onclick="navigator.clipboard.writeText('npm i -g @nimbletools/ntcli'); this.innerHTML='âœ… Copied!'; setTimeout(() => this.innerHTML='<div class=&quot;install-text&quot;>ðŸ“‹ Install the CLI</div><div class=&quot;install-command&quot;>npm i -g @nimbletools/ntcli</div>', 2000)"
>
  <div class="install-text">ðŸ“‹ Install the CLI</div>
  <div class="install-command">npm i -g @nimbletools/ntcli</div>
</button>

<style>
  .install-cta {
    min-width: 250px;
    display: flex;
    flex-direction: column;
    gap: 4px;
    align-items: center;
    cursor: pointer;
  }

  .install-text {
    font-size: 16px;
    font-weight: 600;
  }

  .install-command {
    font-family: "SF Mono", Consolas, monospace;
    font-size: 12px;
    font-weight: 300;
    opacity: 0.8;
  }
</style>
